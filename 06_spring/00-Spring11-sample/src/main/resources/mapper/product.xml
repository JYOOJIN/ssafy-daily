<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.model.mapper.ProductMapper">
	<resultMap type="Product" id="product">
		<result column="code" property="code" />
		<result column="model" property="model" />
		<result column="price" property="price" />
		<result column="id" property="id" />
		<result column="regist_date" property="registDate" />
		<result column="detail" property="detail" />
	</resultMap>
	
	<insert id="registProduct" parameterType="Product">
	insert into product (code, model, price, id, regist_date, detail)
	values (#{code}, #{model}, #{price}, #{id}, now(), #{detail})
	</insert>
	
	<select id="listProduct" resultMap="product">
		select *
		from product
	</select>
	
	<select id="getProduct" resultMap="product">
	select *
	from product
	where code = #{code}
	</select>
	
	<update id="updateProduct">
	update product
	set model=#{model}, price=#{price}, regist_date=now(), detail=#{detail}
	where code = #{code}
	</update>
	
	<delete id="deleteProduct">
	delete from product
	where code = #{code}
	</delete>
	
	<select id="searchProduct" parameterType="String" resultMap="product">
	select *
	from product
	where year(regist_date)=#{year} and month(regist_date)=#{month} and day(regist_date)=#{day}
	</select>
</mapper>