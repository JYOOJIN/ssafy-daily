<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.model.mapper.MemberMapper">
	<resultMap type="Member" id="member">
		<result column="no" property="no" />
		<result column="member_id" property="memberId" />
		<result column="member_name" property="memberName" />
		<result column="password" property="password" />
		<result column="email" property="email" />
		<result column="mobile" property="mobile" />
		<result column="is_admin" property="isAdmin" />
	</resultMap>


	<insert id="join" parameterType="Member">
		insert into members (member_id, member_name, password, email, mobile, is_admin)
		values (#{memberId}, #{memberName}, #{password}, #{email}, #{mobile}, #{isAdmin})
	</insert>
	
	<select id="login" parameterType="map" resultMap="member">
		select *
		from member
		where member_id = #{memberId} and password=#{password}
	</select>
	
</mapper>