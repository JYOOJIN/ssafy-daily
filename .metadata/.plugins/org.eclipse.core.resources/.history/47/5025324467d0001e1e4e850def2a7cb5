package daily_0221;

import java.io.*;
import java.util.*;

public class SW_3289_서로소집합 {
	

	public static void makeSet() {
		
		
	}
	
	public static void FindSet() {
		
		
	}
	
	public static void UnionSet() {
		
	}
	
	public static void RankSet() {
		
	}

	public static void main(String[] args) throws IOException{
		BufferedReader br=new BufferedReader(new InputStreamReader(System.in));
		BufferedWriter bw=new BufferedWriter(new OutputStreamWriter(System.out));
		StringTokenizer st;
		
		int tc=Integer.parseInt(br.readLine());
		
		for(int t=1;t<=tc;t++) {
			StringBuilder sb=new StringBuilder();
			st=new StringTokenizer(br.readLine());
			int n=Integer.parseInt(st.nextToken());
			int m=Integer.parseInt(st.nextToken());
			
			int[] parent=new int[n+1]; //1부터 n까지
			for(int i=1;i<=n;i++) { //MakeSet
				parent[i]=i;
			}
			
			for(int d=0;d<m;d++) {
				st=new StringTokenizer(br.readLine());
				int cal=Integer.parseInt(st.nextToken());
				int a=Integer.parseInt(st.nextToken());
				int b=Integer.parseInt(st.nextToken());

				if(cal==0) { //UnionSet
					parent[b]=a;
				}else if(cal==1) { //FindSet
					
					while(a!=parent[a]) {
						a=parent[a];
					}
					while(b!=parent[b]) {
						b=parent[b];
					}
					
					//System.out.println("대표자: "+a +"/"+"대표자: "+b);
					
					if(a==b) sb.append(1);
					else sb.append(0);

				}
			}

			bw.write("#"+t+" "+sb);
			
			
		}
		bw.flush();
		bw.close();
		

	}
	
}
